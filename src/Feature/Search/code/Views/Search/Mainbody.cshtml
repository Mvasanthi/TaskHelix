@using Sitecore.Mvc
@using Sitecore.Mvc.Analytics.Extensions
@using TaskHelix.Feature.Search.Models
@{
    Layout = null;
    var item = Sitecore.Context.Database.GetItem("{D87CA97C-B541-4371-B04C-9606296DC26C}");
}

<div class="container">
    <div class="text-white bg-primary">

        <main role="main" class="container blog-posts">
            <div class="row">

                @if (ViewBag.BlogCards != null)
                {
                    /**/

                    foreach (BlogCard Postcards in (List<BlogCard>)ViewBag.BlogCards)
                    {

                        <div class="blog-post-card card col-lg-4 col-md-6">
                            @Html.Sitecore().Field("ArticleSmalImage", Postcards.sitecoreItem, new { @class = "card-img-top" })
                            <div class="card-body bg-light">
                                <strong class="d-inline-block mb-2 text-success">@Postcards.Category</strong>
                                <h3 class="card-title">@Postcards.Tittle</h3>
                                <div class="mb-1 text-muted">@Postcards.date</div>
                                <p>@Postcards.ShortDescription</p>
                                <a href="@Postcards.BlogURL" class="btn btn-warning btn-block">@Postcards.PostCardButtonText</a>
                            </div>
                        </div>
                    }

                }
                else
                {

                }
            </div>
        </main>

    </div>

</div>